<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:scrollbars="none"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:background="#ff8000"
        android:orientation="horizontal"
        android:layout_height="56dp">
        <LinearLayout
            android:id="@+id/iv_sao"
            android:layout_width="60dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="match_parent">
            <ImageView
                android:src="@mipmap/ss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="扫一扫"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_height="58dp">
            <EditText
                android:id="@+id/iv_sou"
                android:layout_height="38dp"
                android:drawableLeft="@mipmap/ag1"
                android:background="@drawable/abc"
                android:gravity="center_vertical"
                android:hint="      12.12 精彩提前引爆"
                android:layout_width="match_parent"
                android:drawableRight="@mipmap/robot"
                android:drawableBottom="@drawable/line"
                android:layout_gravity="center_vertical"  />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/iv_ewm"
            android:layout_width="60dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="match_parent">
            <ImageView
                android:src="@mipmap/xxx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="消息"
                android:id="@+id/info"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/homeRecycylerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout"></com.jcodecraeer.xrecyclerview.XRecyclerView>
</RelativeLayout>
</ScrollView>